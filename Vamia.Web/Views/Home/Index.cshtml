</div>

<div class="container-fluid">


    @if (TempData["message"] != null)
    {
        <div style="margin-top:10px;"
             class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button> @TempData["message"]
        </div>
    }


    <div class="row">
        <div class="col-md-8">
            <h4>Products</h4>
            <hr />
            <div class="row">
                @foreach (var product in Model.Inventory)
                {
                    <div class="col-md-4 col-lg-3 text-center">
                        <img src="@product.ImageUrl" style="width:200px" />
                        <p>@product.Name</p>
                        <a href="@Url.Action("add", "cart", new { id = product.ProductId })" class="btn btn-default btn-xs">
                            <i class="fa fa-shopping-cart"></i>Add to Cart
                        </a>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-4">
            <h4><i class="fa fa-shopping-cart"></i>Cart</h4>
            <hr />
            @if (Model.Cart != null && Model.Cart.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th class="text-right">Quantity</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Cart)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td><a href="@Url.Action("remove", "cart", new { id = item.ProductId })" class="btn btn-xs btn-danger"><i class="fa fa-remove"></i>Remove</a></td>
                            </tr>
                        }
                        <tr>
                            <td colspan="3" class="text-right">
                                <a href="@Url.Action("place","order")" class="btn btn-sm btn-primary">
                                    <i class="fa fa-first-order"></i>Place Order
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty">You have no Items in your shopping Cart</div>
            }
        </div>
    </div>

</div>