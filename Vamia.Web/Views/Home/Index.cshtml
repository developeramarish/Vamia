        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img style="width:100%" src="~/Content/images/site/image1.jpg" alt="Image 1">
        </div>
        <div class="item">
            <img style="width:100%" src="~/Content/images/site/image2.jpg" alt="Image 2">
